# =======================================================================
# API Deployment Demo - Environment Configuration
# =======================================================================
# This file documents all environment variables used in the application.
# Copy this file to .env and update the values for your environment.

# =======================================================================
# ACTIVE CONFIGURATION VARIABLES
# =======================================================================

# DATABASE CONFIGURATION
DB_NAME=api_staging
DB_USER=postgres
DB_PASSWORD=
DB_HOST=postgres
DB_PORT=5432
DB_HOST_AUTH_METHOD=md5
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# API APPLICATION SETTINGS
API_ENV=staging
DEBUG=false
SECRET_KEY=
API_WORKERS=4
LOG_LEVEL=info
API_PORT=8000

# WEB SERVER CONFIGURATION
SERVER_NAME=localhost
HTTP_PORT=80
HTTPS_PORT=443
API_UPSTREAM=api:8000

# SSL/TLS CONFIGURATION
SSL_ENABLED=true
SSL_SELF_SIGNED=true
SSL_COUNTRY=US
SSL_STATE=California
SSL_CITY="Los Angeles"
SSL_ORGANIZATION="API Demo Company"
SSL_ORGANIZATIONAL_UNIT="IT Department"
SSL_EMAIL=admin@example.com
SSL_DAYS_VALID=365
SSL_KEY_SIZE=2048

# DOCKER COMPOSE SETTINGS
COMPOSE_PROJECT_NAME=api-deployment-demo
COMPOSE_HTTP_TIMEOUT=120

# RESOURCE LIMITS
API_MEMORY_LIMIT=512M
API_CPU_LIMIT=0.5
API_MEMORY_REQUEST=256M
API_CPU_REQUEST=0.25
NGINX_MEMORY_LIMIT=128M
NGINX_CPU_LIMIT=0.25
DB_MEMORY_LIMIT=512M
DB_CPU_LIMIT=0.5

# MONITORING AND ALERTING (optional - configure if needed)
# MONITORING_ENABLED=true
# LOG_RETENTION_DAYS=30
# HEALTH_CHECK_RETRIES=5
# HEALTH_CHECK_DELAY=10
# HEALTH_CHECK_TIMEOUT=30
# ALERT_EMAIL=ops@yourcompany.com
# MONITORING_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# BACKUP CONFIGURATION (optional - configure if needed)
# BACKUP_ENABLED=true
# BACKUP_RETENTION_DAYS=7
# BACKUP_SCHEDULE=0 2 * * *

# NETWORK AND SECURITY (optional - configure if needed)
# ALLOWED_PORTS=80,443,22
# CORS_ALLOW_ORIGINS=*
# CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOW_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization
# RATE_LIMIT_PER_MINUTE=60

# DEVELOPMENT/TESTING SETTINGS (optional - configure if needed)
# BUILD_ENV=staging
# DEV_MODE=false
# TEST_DB_NAME=api_test
# TEST_DB_USER=test_user
# TEST_DB_PASSWORD=

# KUBERNETES-SPECIFIC SETTINGS (optional - configure if needed)
# K8S_NAMESPACE=api-deployment-demo
# INGRESS_CLASS=nginx
# INGRESS_HOST=api-demo.staging.local
# HPA_MIN_REPLICAS=2
# HPA_MAX_REPLICAS=10
# HPA_CPU_TARGET=70
# HPA_MEMORY_TARGET=80

# ANSIBLE DEPLOYMENT SETTINGS (optional - configure if needed)
# TARGET_ENV=staging
# APP_VERSION=latest
# DEPLOY_USER=deploy
# APP_DIR=/opt/api-deployment-demo

# =======================================================================
# OPTIONAL/COMMENTED CONFIGURATION EXAMPLES
# =======================================================================

# Alternative database URL (uncomment to use instead of individual DB settings)
# DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =======================================================================
# EXTERNAL SERVICES (optional - uncomment as needed)
# =======================================================================
# Redis cache URL (if using caching)
# REDIS_URL=redis://localhost:6379/0

# Email service configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourcompany.com
# SMTP_PASSWORD=
# SMTP_USE_TLS=true

# Object storage (AWS S3, MinIO, etc.)
# S3_BUCKET=your-app-bucket
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_REGION=us-west-2

# =======================================================================
# ENVIRONMENT-SPECIFIC EXAMPLE CONFIGURATIONS
# =======================================================================

# DEVELOPMENT ENVIRONMENT EXAMPLES:
# API_ENV=development
# DEBUG=true
# LOG_LEVEL=debug
# SSL_ENABLED=false
# MONITORING_ENABLED=false

# STAGING ENVIRONMENT EXAMPLES:
# API_ENV=staging  
# DEBUG=false
# LOG_LEVEL=info
# SSL_ENABLED=true
# SSL_SELF_SIGNED=true
# MONITORING_ENABLED=true

# PRODUCTION ENVIRONMENT EXAMPLES:
# API_ENV=production
# DEBUG=false
# LOG_LEVEL=warning
# SSL_ENABLED=true
# SSL_SELF_SIGNED=false
# MONITORING_ENABLED=true
# BACKUP_ENABLED=true

# =======================================================================
# CONFIGURATION NOTES
# =======================================================================
# 1. Always change default passwords and secret keys before deployment
# 2. Use strong, unique passwords for production environments
# 3. Consider using external secret management systems for production
# 4. Regularly rotate secrets and certificates
# 5. Monitor logs and set up appropriate alerting
# 6. Test backup and restore procedures regularly
# 7. Keep this file updated when adding new configuration options