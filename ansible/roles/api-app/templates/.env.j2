# Database Configuration
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DB_HOST=postgres
DB_PORT={{ db_port }}
DB_HOST_AUTH_METHOD={{ db_host_auth_method | default('md5') }}

# API Configuration
API_ENV={{ api_env | default('staging') }}
DEBUG={{ debug_mode | default(false) | lower }}
SECRET_KEY={{ secret_key }}
API_WORKERS={{ api_workers | default(4) }}
LOG_LEVEL={{ log_level | default('info') }}

# Application Settings
SERVER_NAME={{ server_name | default('localhost') }}
HTTP_PORT={{ http_port | default(80) }}
HTTPS_PORT={{ https_port | default(443) }}
SSL_ENABLED={{ ssl_enabled | default(false) | lower }}

# Docker Compose Environment
COMPOSE_PROJECT_NAME={{ app_name }}
API_UPSTREAM=api:{{ api_port }}