# PostgreSQL Client Authentication Configuration File - Generated by Ansible
# {{ ansible_managed }}

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             postgres                                peer

# IPv4 local connections:
local   all             all                                     peer
host    all             all             127.0.0.1/32            {{ postgres_auth_method }}
host    all             all             ::1/128                 {{ postgres_auth_method }}

# Application database access
host    {{ vault_db_name }}    {{ vault_db_user }}    127.0.0.1/32            {{ postgres_auth_method }}
host    {{ vault_db_name }}    {{ vault_db_user }}    {{ ansible_default_ipv4.address }}/32    {{ postgres_auth_method }}

# Allow connections from application servers (if different from db server)
{% for host in groups.get('web', []) %}
{% if hostvars[host].ansible_default_ipv4 is defined %}
host    {{ vault_db_name }}    {{ vault_db_user }}    {{ hostvars[host].ansible_default_ipv4.address }}/32    {{ postgres_auth_method }}
{% endif %}
{% endfor %}

# Monitoring connections
host    postgres        postgres        127.0.0.1/32            {{ postgres_auth_method }}

# Backup connections  
host    {{ vault_db_name }}    postgres        127.0.0.1/32            {{ postgres_auth_method }}