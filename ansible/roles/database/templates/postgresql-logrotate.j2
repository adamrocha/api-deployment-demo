# PostgreSQL log rotation configuration - Generated by Ansible  
# {{ ansible_managed }}

/var/log/postgresql/*.log {
    daily
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 640 postgres postgres
    sharedscripts
    postrotate
        systemctl reload postgresql > /dev/null 2>&1 || true
    endscript
}